<div id="games_index">
  <% unless current_user.nil? %>
  <%= form_for Game.new do |f| %>
    <%= f.submit %>
  <% end %>
  <div id="my_games" class="game_group">
    <h2>My Games</h2>
    <% current_user.games.active.each do |game| %>
        <div><%= "Game ##{game.id} Vs. #{game.player1.first_name} #{game.player1.last_name[0].upcase}." %> <%= link_to 'Resume', edit_game_path(game) %></div>
    <% end %>
  </div>
  <% end %>

  <div id="my_past_games" class="game_group">
    <h2>My Past Games</h2>
    <% current_user.games.completed.each do |game| %>
        <div><%= "Game ##{game.id} Vs. #{game.player1.first_name} #{game.player1.last_name[0].upcase}." %> <%= link_to 'Review', edit_game_path(game) %></div>
    <% end %>
  </div>

  <div id="open_games" class="game_group">
    <h2>Open Games</h2>
    <% @open_games.each do |game| %>
        <div><%= "Game ##{game.id} Vs. #{game.player1.first_name} #{game.player1.last_name[0].upcase}." %> <%= link_to 'Join', join_game_path(game) %></div>
    <% end %>
  </div>

  <div id="active_games" class="game_group">
    <h2>Active Games</h2>
    <% @active_games.each do |game| %>
        <div><%= "Game ##{game.id} Vs. #{game.player1.first_name} #{game.player1.last_name[0].upcase}." %> <%= link_to 'Spectate', game_path(game) %></div>
    <% end %>
  </div>

  <div id="recent_games" class="game_group">
    <h2>Recently Ended Games</h2>
    <% @recent_games.each do |game| %>
        <div><%= "Game ##{game.id} Vs. #{game.player1.first_name} #{game.player1.last_name[0].upcase}." %> <%= link_to 'Spectate', game_path(game) %></div>
    <% end %>
  </div>
</div>